pipeline {
    agent any

    parameters {
        password(name: 'PASSWORD', defaultValue: '', description: 'Senha para database')
    }

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/manoel1845/gama-desafio-final', branch: 'db'
            }
        }
        stage('Build Cluster') {
            steps {
                sh 'chmod +x ~/workspace/Pipeline-Criar-mysql/2-pipelineSQL/deploy.sh'
                sh "~/workspace/Pipeline-Criar-mysql/2-pipelineSQL/deploy.sh"
            }
        }

    }
}
