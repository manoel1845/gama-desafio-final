pipeline {
    agent any

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/manoel1845/gama-desafio-final.git', branch: 'main'
            }
        }
        stage('Build EC2') {
            steps {
                sh "chmod +x 0-infra/deploy.sh"
                sh "0-infra/deploy.sh"
            }
        }
        stage('Test kubernetes e docker') {
            steps {
                sh "chmod +x 0-infra/test.sh"
                sh "0-infra/test.sh"
            }
        }
        stage('Creating ami') {
            steps {
                sh "chmod +x 0-infra/package-ami.sh"
                sh "0-infra/package-ami.sh"
            }
        }
        stage('Destroy') {
            steps {
                sh "chmod +x 0-infra/destroy.sh"
                sh "0-infra/destroy.sh"
            }
        }
    }
}